<p id="notice"><%= notice %></p>

<h1 style="text-align:center;">Listing Namecards</h1>
<hr style="color: red 5px;">
<marquee direction="right"><h2>Developer: Thavath CS Developer RUPP</h2></marquee> 
<div class="media">
<div class="media-body">
<table class="table table-bordered table-hover ">
  <thead>
    <tr>
      <th>Date</th>
      <th>Birthday</th>
      <th>Name</th>
      <th>Company</th>
      <th>Position</th>
      <th>Country</th>
      <th>Address</th>
      <th>Phone</th>
      <th>E-mail</th>
      <th>Postcard</th>
      <th>Cardnumber</th>
      <th colspan="3">Update Data</th>
    </tr>
  </thead>

  <tbody>
    <% @namecards.each do |namecard| %>
      <tr>
        <td><%= namecard.date.strftime("%Y/%m/%d") %></td>
        <td><%= namecard.birthday %></td>
        <td><%= namecard.name %></td>
        <td><%= namecard.company %></td>
        <td><%= namecard.position %></td>
        <td><%= namecard.country %></td>
        <td><%= namecard.address %></td>
        <td><%= namecard.phone %></td>
        <td><%= namecard.email %></td>
        <td><%= namecard.postcard %></td>
        <td><%= namecard.cardnumber %></td>
        <td><%= link_to 'Show', namecard, class:'btn btn-mini' %></td>
        <td><%= link_to 'Edit', edit_namecard_path(namecard), class:'btn btn-mini btn-success' %></td>
        <td><%= link_to 'Destroy', namecard, class:'btn btn-mini btn-danger', method: :delete, data: { confirm: 'Are you sure to Delete?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
<br>

<%= link_to 'New Namecard', new_namecard_path, class:'btn btn-success' %>
